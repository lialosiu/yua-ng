._state_home
  .left-sidebar
    background rgba(255 255 255 .5)
    box-shadow 1px 2px 10px rgba(0 0 0 .3)
    padding 20px 10px
    width 200px
    z-index 10
    .master-info
      .avatar
        width 60%
        max-height 100%
        border-radius 50%
        margin 10px 0
        box-shadow 0 0 5px rgba(0 0 0 .3)
      .name
        font-family 'Miso Light'
        font-size 1.5em
        font-weight bold
      .links
        margin 10px 0
        .md-button
          font-size 1.3em
    .copyright-info
      text-align center
      font-family 'Miso Light'
      font-size 1.2em
      > div
        margin 2px 0
  .home-header
    padding 10px 20px
    background rgba(255 255 255 .8)
    box-shadow 4px 0 10px rgba(0 0 0 .3)
    position fixed
    top 0
    left 200px
    right 0
    .title
      font-size 1.3em
    .desc
      font-family 'Microsoft YaHei', sans-serif
      color #888
  .home-body
    padding-top 25px
    margin 25px